@model Application.DTOs.Exam.ExamTakeDTO


@{
	ViewData["Title"] = "Xem trước đề thi";
	int index = 1;
}

<div class="container py-5" style="min-height: 65vh;">
	<h2 class="text-center mb-5 fw-bold" style="color: #D13D76; font-size: 2.5rem">
		👁️ Xem trước đề thi
	</h2>

	<style>
		.timeline-box {
			position: relative;
			padding-left: 40px;
			margin-bottom: 40px;
			border-left: 3px solid #FAD3E7;
		}

		.timeline-dot {
			position: absolute;
			left: -10px;
			top: 0;
			width: 20px;
			height: 20px;
			background-color: #FE9FC3;
			border-radius: 50%;
			border: 3px solid white;
			box-shadow: 0 0 0 3px #FAD3E7;
		}

		.card-question {
			background: #FFFFFF;
			border: 2px solid #D8F8F2;
			border-radius: 16px;
			padding: 20px;
			box-shadow: 0 4px 20px rgba(0,0,0,0.05);
			transition: 0.3s ease;
		}

		.answer-option {
			border-radius: 10px;
			padding: 12px 16px;
			margin-bottom: 10px;
			background-color: #F9F9F9;
			border: 1.5px solid #e0e0e0;
			transition: 0.2s ease;
		}
	</style>

	@foreach (var question in Model.Questions)
	{
		<div class="timeline-box">
			<div class="timeline-dot"></div>
			<div class="card-question">
				<div class="d-flex justify-content-between align-items-center mb-3">
					<h5 class="fw-bold mb-0">Câu @index: @question.Content</h5>
					<span class="badge bg-secondary">⏳ Xem trước</span>
				</div>
				<div class="ps-2">
					@foreach (var answer in question.Answers)
					{
						<div class="answer-option">
							<input class="form-check-input me-2" type="radio" disabled name="question-@question.Id" />
							<label class="form-check-label fw-semibold">@answer.AnswerText</label>
						</div>
					}
				</div>
			</div>
		</div>
		index++;
	}
</div>
