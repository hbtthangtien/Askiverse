@using Microsoft.AspNetCore.Identity
@using System.Security.Claims

@{
	ViewData["Title"] = "Nộp bài";
	var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 65vh">
	<div class="d-flex justify-content-center align-items-center rounded rounded-3 border border-3"
		 style="width: 400px; height: 200px; background-color: white; flex-direction: column; border-color: #D13D76 !important; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1)">
		@if (ViewData["Error"] == null)
		{
			<h1 class="mb-3" style="color: #D13D76">Nộp bài thành công!</h1>
			<form class="mt-3" method="post" asp-controller="ExamScored" asp-action="ViewResult">
				<input type="hidden" name="ExamId" value="@ViewData["ExamId"]" />
				<input type="hidden" name="examScoredId" value="@ViewData["examScoredId"]" />
				<button style="background: #D13D76; color: white;" type="submit">Xem kết quả</button>
			</form>
		}
		else
		{
			<h1>Nộp bài thất bại!</h1>
			<button>Quay lại trang chủ!</button>
		}
	</div>
</div>