<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Askiverse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Presentation.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="navbar">
        <div class="logo">
            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/59/Question_book-new.svg/240px-Question_book-new.svg.png" alt="Askiverse Logo">
            Askiverse
        </div>
        <nav>
            <a href="#">Trang chủ</a>
            <a href="#">Khoá học</a>
            <a href="#">Lịch học</a>
            <a href="#">Liên hệ</a>
        </nav>
        <div class="auth" id="auth-area">
            <a href="#">Đăng nhập</a>
            <a href="#">Đăng ký</a>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <p>© 2025 Askiverse - Cộng đồng học tập sáng tạo và hiệu quả.</p>
        <p><a href="#">Chính sách bảo mật</a> | <a href="#">Điều khoản sử dụng</a></p>
    </footer>
    

    <script>
        const dropdownTrigger = document.querySelectorAll('.nav-item.dropdown');
        dropdownTrigger.forEach(item => {
            item.addEventListener('mouseenter', () => {
                const toggle = item.querySelector('[data-bs-toggle="dropdown"]');
                const dropdown = new bootstrap.Dropdown(toggle);
                dropdown.show();
            });
            item.addEventListener('mouseleave', () => {
                const toggle = item.querySelector('[data-bs-toggle="dropdown"]');
                const dropdown = new bootstrap.Dropdown(toggle);
                dropdown.hide();
            })
        })
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
