@using Application.DTOs.BasicUser
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Đăng ký";
}

@model CreateBasicUserDTO

<div class="d-flex align-items-center justify-content-center min-vh-100">
	<div class="card shadow-lg p-4" style="width: 100%; max-width: 500px; border-radius: 1rem;">
		<h3 class="text-center mb-4 fw-bold" style="color: #D13D76">📝 Tạo tài khoản</h3>
		<form asp-action="Register" method="post">

			<div class="mb-3">
				<label asp-for="Username" class="form-label">Tên đăng nhập</label>
				<div class="input-group">
					<span class="input-group-text"><i class="bi bi-person-fill"></i></span>
					<input type="text" class="form-control" asp-for="Username" required />
				</div>
			</div>

			<div class="mb-3">
				<label asp-for="Email" class="form-label">Địa chỉ Email</label>
				<div class="input-group">
					<span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
					<input type="email" class="form-control" id="Email" asp-for="Email" required />
				</div>
			</div>

			<div class="mb-3">
				<label for="Gender" class="form-label">Giới tính</label>
				<div class="input-group">
					<span class="input-group-text"><i class="bi bi-gender-ambiguous"></i></span>
					<select class="form-select" id="Gender" name="gender" required>
						<option value="other" selected>Khác</option>
						<option value="male">Nam</option>
						<option value="female">Nữ</option>
					</select>
				</div>
			</div>

			<div class="mb-3">
				<label asp-for="Password" class="form-label">Mật khẩu</label>
				<div class="input-group">
					<span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
					<input type="password" class="form-control" id="Password" asp-for="Password" required />
				</div>
			</div>

			<div class="mb-3">
				<label asp-for="ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
				<div class="input-group">
					<span class="input-group-text"><i class="bi bi-lock"></i></span>
					<input type="password" class="form-control" id="ConfirmPassword" asp-for="ConfirmPassword" required />
				</div>
			</div>

			@if (ViewData["ErrorMessage"] != null)
			{
				<p style="color:red">@ViewData["ErrorMessage"]</p>
			}

			<button type="submit" class="btn btn-primary w-100 fw-bold">Đăng ký</button>
		</form>

		<p class="mt-3 text-center text-white">
			Đã có tài khoản? <a class="text-warning fw-bold" asp-action="Login" asp-controller="BasicUser">Đăng nhập ở đây</a>
		</p>
	</div>
</div>