@model Application.DTOs.Profile.ProfileDTO

<h2>Hồ sơ cá nhân</h2>

<div class="card p-3" style="max-width: 400px;">
    <div class="mb-3 text-center">
        @if (!string.IsNullOrEmpty(Model.AvatarUrl))
        {
            <img src="@Model.AvatarUrl" alt="Avatar" class="rounded-circle" style="width:150px; height:150px; object-fit:cover;" />
        }
        else
        {
            <img src="~/images/default-avatar.png" alt="Avatar mặc định" class="rounded-circle" style="width:150px; height:150px; object-fit:cover;" />
        }
    </div>

    <p><strong>Họ tên:</strong> @Model.Fullname</p>
    <p><strong>Giới tính:</strong> @Model.Gender</p>
    <p><strong>Ngày sinh:</strong> @Model.DateOfBirth?.ToString("dd/MM/yyyy")</p>
    <p><strong>Giới thiệu:</strong> @Model.Bio</p>
</div>

<a asp-action="Edit" class="btn btn-primary mt-3">Chỉnh sửa hồ sơ</a>
<a asp-action="ChangePassword" class="btn btn-warning mt-2">Đổi mật khẩu</a>
