@model Application.DTOs.Profile.ChangePasswordDTO

<style>
    body {
        background: linear-gradient(180deg, #F5F5F5, #D8F8F2);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    h2 {
        text-align: center;
        font-weight: bold;
        color: #D13D76;
        margin-top: 40px;
        font-size: 40px;
    }

    .profile-wrapper {
        max-width: 600px;
        margin: 40px auto;
        background-color: #FFFFFF;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 30px;
        text-align: center;
    }

    .form-group {
        margin-bottom: 20px;
        text-align: left;
    }

    label {
        font-weight: 600;
        color: #D13D76;
        display: block;
        margin-bottom: 6px;
    }

    .form-control {
        width: 100%;
        padding: 10px 14px;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 16px;
        transition: border 0.3s ease;
    }

        .form-control:focus {
            border-color: #FE9FC3;
            outline: none;
        }

    .text-danger {
        color: red;
        font-size: 14px;
    }

    .btn-update {
        padding: 12px 28px;
        background-color: #D13D76;
        color: #fff;
        font-weight: 600;
        border: none;
        border-radius: 10px;
        transition: background-color 0.3s ease;
        cursor: pointer;
    }

        .btn-update:hover {
            background-color: #a12b5d;
        }

    .btn-back {
        padding: 12px 28px;
        background-color: #FE9FC3;
        color: #000000;
        font-weight: 600;
        border: none;
        border-radius: 10px;
        transition: background-color 0.3s ease;
        cursor: pointer;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

        .btn-back:hover {
            background-color: #f48fb1;
        }

    .button-group {
        margin-top: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
</style>

<h2>Đổi mật khẩu</h2>

<div class="profile-wrapper">
    <form asp-action="ChangePassword" method="post">
        <div class="form-group">
            <label>Mật khẩu cũ</label>
            <input asp-for="OldPassword" class="form-control" type="password" required />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Mật khẩu mới</label>
            <input asp-for="NewPassword" class="form-control" type="password" required />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Xác nhận mật khẩu mới</label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" required />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="button-group">
            <a asp-action="ViewProfile" class="btn-back">← Quay lại</a>
            <button type="submit" class="btn-update">🔐 Đổi mật khẩu</button>
        </div>
    </form>
</div>
