@model Application.DTOs.Profile.UpdateProfileDTO
@using Domain.Enums

<h2>Cập nhật hồ sơ</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label>Họ tên</label>
        <input asp-for="Fullname" class="form-control" />
        <span asp-validation-for="Fullname" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Ảnh đại diện (URL)</label>
        <input asp-for="AvatarUrl" class="form-control" />
    </div>

    <div class="form-group">
        <label>Giới tính</label>
        <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()"></select>
    </div>

    <div class="form-group">
        <label>Ngày sinh</label>
        <input asp-for="DateOfBirth" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Giới thiệu</label>
        <textarea asp-for="Bio" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Cập nhật</button>
</form>
