@model Application.DTOs.Profile.UpdateProfileDTO
@using Domain.Enums
<style>
    body {
        background: linear-gradient(180deg, #F5F5F5, #D8F8F2);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    h2 {
        text-align: center;
        font-weight: bold;
        color: #D13D76;
        margin-top: 40px;
        font-size: 40px;
    }

    .profile-wrapper {
        max-width: 700px;
        margin: 40px auto;
        background-color: #FFFFFF;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: 600;
        color: #121117;
        display: block;
        margin-bottom: 6px;
    }

    .form-control, select, textarea {
        width: 100%;
        padding: 10px 14px;
        border: 1px solid #ccc;
        border-radius: 10px;
        font-size: 16px;
        transition: border 0.3s ease;
    }

        .form-control:focus, select:focus, textarea:focus {
            border-color: #D13D76;
            outline: none;
        }

    textarea {
        resize: vertical;
        min-height: 100px;
    }

    .text-danger {
        color: red;
        font-size: 14px;
    }

    .btn-update {
        padding: 12px 28px;
        background-color: #D13D76;
        color: #fff;
        font-weight: 600;
        border: none;
        border-radius: 10px;
        transition: background-color 0.3s ease;
    }

        .btn-update:hover {
            background-color: #a12b5d;
        }

    .btn-back {
        padding: 12px 28px;
        background-color: #FE9FC3;
        color: #000000;
        font-weight: 600;
        border: none;
        border-radius: 10px;
        transition: background-color 0.3s ease;
        cursor: pointer;
        margin-right: 16px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

        .btn-back:hover {
            background-color: #f687b3;
        }

    .button-group {
        margin-top: 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
    }
</style>


<h2>Cập nhật hồ sơ</h2>

<div class="profile-wrapper">
    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label>Họ tên</label>
            <input asp-for="Fullname" class="form-control" />
            <span asp-validation-for="Fullname" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Ảnh đại diện (URL)</label>
            <input asp-for="AvatarUrl" class="form-control" />
        </div>

        <div class="form-group">
            <label>Giới tính</label>
            <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()"></select>
        </div>

        <div class="form-group">
            <label>Ngày sinh</label>
            <input asp-for="DateOfBirth" type="date" class="form-control" />
        </div>

        <div class="form-group">
            <label>Giới thiệu</label>
            <textarea asp-for="Bio" class="form-control"></textarea>
        </div>

        <div class="button-group">
            <a asp-action="ViewProfile" class="btn-back">← Quay lại</a>
            <button type="submit" class="btn-update mt-3">💾 Cập nhật</button>
        </div>
       

    </form>
</div>
