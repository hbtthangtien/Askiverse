@model Application.DTOs.ExamScored.ExamScoredDTO;

<div class="container d-flex justify-content-center align-items-center text-center container-fluid" style="min-height:65vh">

	<table class="table table-striped table-bordered border-2 border-dark">
		<thead style="color: #D13D76">
			<tr>
				<th>Bài làm</th>
				<th>Thời gian làm bài</th>
				<th>Thời gian nộp bài</th>
				<th>Điểm</th>
				<th>Hoạt động</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>@Model.Exam?.Title</td>
				<td>@Model.StartTime</td>
				<td>@Model.SubmitedTime</td>
				<td>@Model.Score</td>
				<td>
					<form method="post" asp-controller="ExamScored" asp-action="ViewDetails">
						<input type="hidden" name="examScoredId" value="@ViewData["examScoredId"]" />
						<input type="hidden" name="ExamId" value="@ViewData["ExamId"]" />
						<button style="background: #D13D76; color: white" type="submit">Xem chi tiết</button>
					</form>
					@* <a asp-controller="ExamScored" asp-action="ViewDetails" asp-route-examScoredId="@ViewData["examScoredId"]" asp-route-ExamId="@ViewData["ExamId"]">Xem chi tiết</a> *@
				</td>
			</tr>
		</tbody>
	</table>
</div>